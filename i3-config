exec vmware-user-suid-wrapper
exec feh --bg-scale ~/.config/i3/voyager.jpg

# @MPD startup programs
exec --no-startup-id i3-msg 'workspace 0 nexus; exec firefox "www.chatgpt.com"'
exec --no-startup-id i3-msg 'workspace 9 forge; exec gnome-terminal'
exec --no-startup-id i3-msg 'workspace 1 worker; exec gnome-terminal'

